{
    "compilerOptions": {
      "outDir": "./build",
      "module": "commonjs",
      "target": "ES2017",
      "declaration": true,
      "sourceMap": true,
      "strict": true,
      "noEmitOnError": true,
      "lib": [],
      "types": [],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["test/**/*", "src/**/*"],
    "exclude": ["node_modules", "build", "src/**/*", "**/__tests__/*.ts", "**/__mocks__/*.ts", "**/build/**"]
  }